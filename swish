#include<stdio.h>
#include<conio.h>
main()
{
int i,a,b,c,sum;
sum=0;
printf("enter the initial coffee price");
scanf("%d",&a);
printf("enter the discount amount");
scanf("%d",&b);
if(0<=a<=10000 && 1<=b<=100)
{
for(i=0;a!=0;i++)
{
sum=sum+a;
a=a*((100-b)/100)
}
}
else{ printf("invalid values"); }
printf("%d",sum);
}
